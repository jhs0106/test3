<script>
    let inquiryPage = {
        custId: null,
        activeRoomId: null,
        stompClient: null,
        isConnected: false,
        // ‚≠ê WebRTC Í¥ÄÎ†® Î≥ÄÏàò Ï∂îÍ∞Ä
        rtcConnection: null,
        rtcSocket: null,
        localStream: null,

        init: function() {
            this.custId = '${sessionScope.cust}';

            if (!this.custId || this.custId === '') {
                this.custId = 'guest_' + Math.floor(Math.random() * 10000);
                console.log('‚ö†Ô∏è ÏÑ∏ÏÖò ÏóÜÏùå, ÏûÑÏãú ID ÏÉùÏÑ±:', this.custId);
            }

            console.log('üë§ ÌòÑÏû¨ ÏÇ¨Ïö©Ïûê ID:', this.custId);

            this.bindEvents();
            this.updateConnectionStatus(false);
            this.connectWebSocket();
            this.checkActiveRoom();
        },

        getCurrentLocation: function() {
            if (!navigator.geolocation) {
                console.warn('‚ö†Ô∏è Geolocation APIÎ•º ÏßÄÏõêÌïòÏßÄ ÏïäÎäî Î∏åÎùºÏö∞Ï†ÄÏûÖÎãàÎã§.');
                return;
            }

            navigator.geolocation.getCurrentPosition(
                    (position) => {
                        const lat = position.coords.latitude;
                        const lng = position.coords.longitude;
                        console.log('üìç ÌòÑÏû¨ ÏúÑÏπò:', lat, lng);

                        if (this.activeRoomId) {
                            this.sendLocation(lat, lng);
                        }
                    },
                    (error) => {
                        console.error('‚ùå ÏúÑÏπò Ï†ïÎ≥¥ ÏàòÏßë Ïã§Ìå®:', error.message);
                    },
                    {
                        enableHighAccuracy: true,
                        timeout: 5000,
                        maximumAge: 0
                    }
            );
        },

        sendLocation: function(latitude, longitude) {
            $.ajax({
                url: 'https://10.20.33.248:8443/api/chatroom/' + this.activeRoomId + '/location',
                type: 'POST',
                data: {
                    latitude: latitude,
                    longitude: longitude
                },
                success: (response) => {
                    console.log('‚úÖ ÏúÑÏπò Ï†ïÎ≥¥ Ï†ÑÏÜ° ÏÑ±Í≥µ:', response);
                },
                error: (xhr) => {
                    console.error('‚ùå ÏúÑÏπò Ï†ïÎ≥¥ Ï†ÑÏÜ° Ïã§Ìå®:', xhr.responseText);
                }
            });
        },

        bindEvents: function() {
            $('#sendChatBtn').click(() => {
                this.sendMessage();
            });
            $('#chatMessage').on('keypress', (e) => {
                if (e.which === 13) {
                    e.preventDefault();
                    this.sendMessage();
                }
            });
            // ‚≠ê ÏòÅÏÉÅÌÜµÌôî Î≤ÑÌäº Ïù¥Î≤§Ìä∏
            $('#videoCallBtn').click(() => {
                this.openVideoModal();
            });

            // ‚≠ê Î™®Îã¨ Îã´Í∏∞
            $('#closeVideoModal').click(() => {
                this.closeVideoModal();
            });

            // ‚≠ê ÌÜµÌôî ÏãúÏûë/Ï¢ÖÎ£å
            $('#startCallBtn').click(() => {
                this.startVideoCall();
            });

            $('#endCallBtn').click(() => {
                this.endVideoCall();
            });

            // ‚≠ê Î™®Îã¨ Ïô∏Î∂Ä ÌÅ¥Î¶≠ Ïãú Îã´Í∏∞
            $(window).click((e) => {
                if (e.target.id === 'videoModal') {
                    this.closeVideoModal();
                }
            });
        },

        checkActiveRoom: function() {
            $.ajax({
                url: 'https://10.20.33.248:8443/api/chatroom/active/' + this.custId,
                type: 'GET',
                dataType: 'json',
                success: (data) => {
                    if (data && data.roomId) {
                        console.log('‚úÖ ÌôúÏÑ± Ï±ÑÌåÖÎ∞© Ï°¥Ïû¨:', data);
                        this.activeRoomId = data.roomId;
                        this.showActiveRoomStatus(data);
                        $('#videoCallBtn').prop('disabled', false); // ‚≠ê ÏòÅÏÉÅ ÌÜµÌôî Î≤ÑÌäº ÌôúÏÑ±Ìôî
                    } else {
                        console.log('‚ÑπÔ∏è ÌôúÏÑ± Ï±ÑÌåÖÎ∞© ÏóÜÏùå');
                        this.showReadyStatus();
                    }
                },
                error: (xhr) => {
                    console.log('‚ÑπÔ∏è ÌôúÏÑ± Ï±ÑÌåÖÎ∞© Ï°∞Ìöå Ïã§Ìå® (ÏóÜÏùå)');
                    this.showReadyStatus();
                }
            });
        },

        connectWebSocket: function() {
            if (this.stompClient || !this.custId) {
                return;
            }

            try {
                const socket = new SockJS('${websocketurl}chat');
                this.stompClient = Stomp.over(socket);
                this.stompClient.connect({}, (frame) => {
                    console.log('‚úÖ WebSocket Ïó∞Í≤∞ ÏôÑÎ£å:', frame);
                    this.updateConnectionStatus(true);
                    this.getCurrentLocation();

                    this.stompClient.subscribe('/adminsend/to/' + this.custId, (message) => {
                        const payload = JSON.parse(message.body);

                        if (payload.content1 === '__CHAT_CLOSED__') {
                            this.handleChatClosed();
                        } else {
                            this.appendMessage('admin', payload.content1);
                        }
                    });
                }, (error) => {
                    console.error('‚ùå WebSocket Ïó∞Í≤∞ Ïã§Ìå®:', error);
                    this.stompClient = null;
                    this.updateConnectionStatus(false);
                });

                socket.onclose = () => {
                    console.log('‚ÑπÔ∏è WebSocket Ïó∞Í≤∞ Ï¢ÖÎ£å');
                    this.stompClient = null;
                    this.updateConnectionStatus(false);
                };
            } catch (e) {
                console.error('WebSocket Ï¥àÍ∏∞Ìôî Ïã§Ìå®:', e);
                this.updateConnectionStatus(false);
            }
        },

        handleChatClosed: function() {
            this.appendMessage('admin', '‚ö†Ô∏è ÏÉÅÎã¥ÏÇ¨Í∞Ä Ï±ÑÌåÖÏùÑ Ï¢ÖÎ£åÌñàÏäµÎãàÎã§. Í∞êÏÇ¨Ìï©ÎãàÎã§!');

            $('#chatConnection').text('ÏÉÅÎã¥ Ï¢ÖÎ£åÎê®').removeClass('text-success').addClass('text-warning');
            $('#sendChatBtn').prop('disabled', true);
            $('#chatMessage').prop('disabled', true);
            $('#videoCallBtn').prop('disabled', true); // ‚≠ê ÏòÅÏÉÅ ÌÜµÌôî Î≤ÑÌäº ÎπÑÌôúÏÑ±Ìôî

            if (this.stompClient) {
                this.stompClient.disconnect();
                this.stompClient = null;
            }

            this.isConnected = false;
            this.activeRoomId = null;

            $('#statusMessage').html(
                    '<div class="alert alert-warning">' +
                    '<i class="fas fa-check-circle"></i> ' +
                    'ÏÉÅÎã¥Ïù¥ Ï¢ÖÎ£åÎêòÏóàÏäµÎãàÎã§. ÏÉàÎ°úÏö¥ Î¨∏ÏùòÎ•º ÏãúÏûëÌïòÎ†§Î©¥ ÌéòÏù¥ÏßÄÎ•º ÏÉàÎ°úÍ≥†Ïπ®ÌïòÏÑ∏Ïöî.' +
                    '</div>'
            );
        },

        updateConnectionStatus: function(isConnected) {
            this.isConnected = isConnected;
            const canChat = isConnected && this.activeRoomId;
            if (isConnected) {
                $('#chatConnection').text('Ïã§ÏãúÍ∞Ñ ÏÉÅÎã¥ Ïó∞Í≤∞Îê®').removeClass('text-danger').addClass('text-success');
                $('#sendChatBtn').prop('disabled', !canChat);
                $('#chatMessage').prop('disabled', !canChat);
            } else {
                $('#chatConnection').text('Ïó∞Í≤∞ ÎåÄÍ∏∞ Ï§ë...').removeClass('text-success').addClass('text-danger');
                $('#sendChatBtn').prop('disabled', true);
                $('#chatMessage').prop('disabled', true);
            }
        },

        appendMessage: function(sender, message) {
            const sanitized = $('<div>').text(message).html();
            const time = new Date().toLocaleTimeString();
            const senderLabel = sender === 'user' ? 'ÎÇò' : 'ÏÉÅÎã¥ÏÇ¨';
            const messageClass = sender === 'user' ? 'user' : 'admin';

            $('#chatMessages').append(
                    '<div class="chat-message ' + messageClass + '">' +
                    '<span class="sender">[' + time + '] ' + senderLabel + '</span>' +
                    '<span class="text">' + sanitized + '</span>' +
                    '</div>'
            );
            $('#chatMessages').scrollTop($('#chatMessages')[0].scrollHeight);
        },

        sendMessage: function() {
            if (!this.isConnected || !this.stompClient) {
                alert('ÏÉÅÎã¥ Ïó∞Í≤∞Ïù¥ ÏïÑÏßÅ ÏôÑÎ£åÎêòÏßÄ ÏïäÏïòÏäµÎãàÎã§. Ïû†Ïãú ÌõÑ Îã§Ïãú ÏãúÎèÑÌï¥Ï£ºÏÑ∏Ïöî.');
                return;
            }

            const message = $('#chatMessage').val().trim();
            if (!message) {
                return;
            }

            const payload = {
                sendid: this.custId,
                receiveid: 'admin',
                content1: message,
                roomId: this.activeRoomId
            };

            this.stompClient.send('/receiveto', {}, JSON.stringify(payload));
            this.appendMessage('user', message);
            $('#chatMessage').val('');
        },

        createChatRoom: function() {
            if (this.activeRoomId) {
                alert('Ïù¥ÎØ∏ ÏßÑÌñâ Ï§ëÏù∏ Ï±ÑÌåÖÎ∞©Ïù¥ ÏûàÏäµÎãàÎã§.');
                return;
            }

            $('#startChatBtn').prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> ÏÉùÏÑ± Ï§ë...');

            $.ajax({
                url: 'https://10.20.33.248:8443/api/chatroom/create',
                type: 'POST',
                data: { custId: this.custId },
                success: (response) => {
                    console.log('‚úÖ Ï±ÑÌåÖÎ∞© ÏÉùÏÑ± ÏÑ±Í≥µ:', response);

                    $('#statusMessage').html(
                            '<div class="alert alert-success">' +
                            '<i class="fas fa-check-circle"></i> ' +
                            'Ï±ÑÌåÖÎ∞©Ïù¥ ÏÉùÏÑ±ÎêòÏóàÏäµÎãàÎã§! ÏÉÅÎã¥ÏÇ¨Í∞Ä Í≥ß Ïó∞Í≤∞Îê©ÎãàÎã§.' +
                            '</div>'
                    );

                    setTimeout(() => {
                        this.checkActiveRoom();
                    }, 1000);
                },
                error: (xhr) => {
                    console.error('‚ùå Ï±ÑÌåÖÎ∞© ÏÉùÏÑ± Ïã§Ìå®:', xhr);
                    $('#statusMessage').html(
                            '<div class="alert alert-danger">' +
                            '<i class="fas fa-exclamation-circle"></i> ' +
                            'Ï±ÑÌåÖÎ∞© ÏÉùÏÑ±Ïóê Ïã§Ìå®ÌñàÏäµÎãàÎã§. Îã§Ïãú ÏãúÎèÑÌï¥Ï£ºÏÑ∏Ïöî.' +
                            '</div>'
                    );
                    $('#startChatBtn').prop('disabled', false).html('<i class="fas fa-comments"></i> ÏÉÅÎã¥ ÏãúÏûëÌïòÍ∏∞');
                }
            });
        },

        showReadyStatus: function() {
            $('#chatStatus').html(
                    '<div class="chat-status">' +
                    '<div class="status-icon">üí¨</div>' +
                    '<div class="status-message">ÏÉÅÎã¥ Ï§ÄÎπÑ ÏôÑÎ£å</div>' +
                    '<div class="status-detail">ÏïÑÎûò Î≤ÑÌäºÏùÑ ÌÅ¥Î¶≠ÌïòÏó¨ ÏÉÅÎã¥ÏùÑ ÏãúÏûëÌïòÏÑ∏Ïöî</div>' +
                    '</div>' +
                    '<button id="startChatBtn" class="btn-start-chat" onclick="inquiryPage.createChatRoom()">' +
                    '<i class="fas fa-comments"></i> ÏÉÅÎã¥ ÏãúÏûëÌïòÍ∏∞' +
                    '</button>'
            );
        },

        showActiveRoomStatus: function(room) {
            let statusIcon = room.status === 'waiting' ? '‚è≥' : '‚úÖ';
            let statusText = room.status === 'waiting' ? 'ÏÉÅÎã¥ÏÇ¨ Ïó∞Í≤∞ ÎåÄÍ∏∞ Ï§ë' : 'ÏÉÅÎã¥ ÏßÑÌñâ Ï§ë';
            let statusDetail = room.status === 'waiting' ?
                    'ÏÉÅÎã¥ÏÇ¨Í∞Ä Í≥ß Ïó∞Í≤∞Îê©ÎãàÎã§. Ïû†ÏãúÎßå Í∏∞Îã§Î†§Ï£ºÏÑ∏Ïöî.' :
                    'ÏÉÅÎã¥ÏÇ¨ÏôÄ Ïó∞Í≤∞ÎêòÏóàÏäµÎãàÎã§.';

            $('#chatStatus').html(
                    '<div class="chat-status">' +
                    '<div class="status-icon">' + statusIcon + '</div>' +
                    '<div class="status-message">' + statusText + '</div>' +
                    '<div class="status-detail">' + statusDetail + '</div>' +
                    '<div class="room-info">Ï±ÑÌåÖÎ∞© Î≤àÌò∏: ' + room.roomId + ' | Í≥†Í∞ù ID: ' + room.custId + '</div>' +
                    '</div>' +
                    '<button class="btn-start-chat" disabled>' +
                    '<i class="fas fa-check-circle"></i> Ï±ÑÌåÖÎ∞© ÏÉùÏÑ±Îê®' +
                    '</button>'
            );
            this.updateConnectionStatus(this.isConnected);
        },

        // ‚≠ê ÏòÅÏÉÅÌÜµÌôî Î™®Îã¨ Ïó¥Í∏∞
        openVideoModal: function() {
            if (!this.activeRoomId) {
                alert('Î®ºÏ†Ä Ï±ÑÌåÖÎ∞©ÏùÑ ÏÉùÏÑ±Ìï¥Ï£ºÏÑ∏Ïöî.');
                return;
            }
            $('#videoModal').fadeIn(300);
        },

        // ‚≠ê ÏòÅÏÉÅÌÜµÌôî Î™®Îã¨ Îã´Í∏∞
        closeVideoModal: function() {
            if (this.rtcConnection) {
                if (confirm('ÌÜµÌôî Ï§ëÏûÖÎãàÎã§. Ï¢ÖÎ£åÌïòÏãúÍ≤†ÏäµÎãàÍπå?')) {
                    this.endVideoCall();
                    $('#videoModal').fadeOut(300);
                }
            } else {
                $('#videoModal').fadeOut(300);
            }
        },

        // ‚≠ê ÏòÅÏÉÅ ÌÜµÌôî ÏãúÏûë Ìï®Ïàò
        startVideoCall: function() {
            console.log('üé• ÏòÅÏÉÅÌÜµÌôî ÏãúÏûë');
            $('#videoConnectionStatus').removeClass('disconnected').addClass('connecting').text('Ïó∞Í≤∞ Ï§ë...');

            // Î°úÏª¨ ÎπÑÎîîÏò§ Ïä§Ìä∏Î¶º Í∞ÄÏ†∏Ïò§Í∏∞
            navigator.mediaDevices.getUserMedia({ video: true, audio: true })
                    .then(stream => {
                        this.localStream = stream;
                        const localVideo = document.getElementById('localVideo');
                        localVideo.srcObject = stream;
                        localVideo.play().catch(err => console.warn('‚ö†Ô∏è Î°úÏª¨ ÏòÅÏÉÅ ÏûêÎèôÏû¨ÏÉù Ïã§Ìå®:', err));

                        // WebRTC Ïó∞Í≤∞ ÏÑ§Ï†ï
                        this.setupWebRTC();

                        $('#startCallBtn').hide();
                        $('#endCallBtn').show();
                    })
                    .catch(error => {
                        console.error('‚ùå ÎØ∏ÎîîÏñ¥ Ï†ëÍ∑º Ïã§Ìå®:', error);
                        alert('Ïπ¥Î©îÎùº/ÎßàÏù¥ÌÅ¨ Ï†ëÍ∑ºÏóê Ïã§Ìå®ÌñàÏäµÎãàÎã§. Î∏åÎùºÏö∞Ï†Ä ÏÑ§Ï†ïÏùÑ ÌôïÏù∏Ìï¥Ï£ºÏÑ∏Ïöî.');
                        $('#videoConnectionStatus').removeClass('connecting').addClass('disconnected').text('Ïó∞Í≤∞ Ïã§Ìå®');
                    });
        },

// ‚≠ê WebRTC ÏÑ§Ï†ï (ÏÉàÎ°úÏö¥ Ìï®Ïàò Ï∂îÍ∞Ä)
        setupWebRTC: function() {
            // WebRTC Signaling Server Ïó∞Í≤∞
            this.rtcSocket = new WebSocket('wss://10.20.33.248:8443/signal');

            this.rtcSocket.onopen = () => {
                console.log('‚úÖ Signaling Server Ïó∞Í≤∞');

                // Room Ï∞∏Í∞Ä
                this.rtcSocket.send(JSON.stringify({
                    type: 'join',
                    roomId: this.activeRoomId.toString(),
                    custId: this.custId
                }));
            };

            this.rtcSocket.onmessage = (event) => {
                const message = JSON.parse(event.data);
                this.handleSignalingMessage(message);
            };

            this.rtcSocket.onerror = (error) => {
                console.error('‚ùå Signaling Ïò§Î•ò:', error);
                $('#videoConnectionStatus').removeClass('connecting').addClass('disconnected').text('Ïó∞Í≤∞ Ïã§Ìå®');
            };

            // RTCPeerConnection ÏÉùÏÑ±
            const configuration = {
                iceServers: [{ urls: 'stun:stun.l.google.com:19302' }]
            };

            this.rtcConnection = new RTCPeerConnection(configuration);

            // Î°úÏª¨ Ïä§Ìä∏Î¶º Ï∂îÍ∞Ä
            this.localStream.getTracks().forEach(track => {
                this.rtcConnection.addTrack(track, this.localStream);
            });

            // ÏõêÍ≤© Ïä§Ìä∏Î¶º ÏàòÏã†
            this.rtcConnection.ontrack = (event) => {
                console.log('üìπ ÏõêÍ≤© Ïä§Ìä∏Î¶º ÏàòÏã†');
                const remoteVideo = document.getElementById('remoteVideo');
                remoteVideo.srcObject = event.streams[0];
                remoteVideo.play().catch(err => console.warn('‚ö†Ô∏è ÏõêÍ≤© ÏòÅÏÉÅ ÏûêÎèôÏû¨ÏÉù Ïã§Ìå®:', err));
                $('#videoConnectionStatus').removeClass('connecting disconnected').addClass('connected').text('ÌÜµÌôî Ïó∞Í≤∞Îê®');
            };

            // ICE candidate Ï≤òÎ¶¨
            this.rtcConnection.onicecandidate = (event) => {
                if (event.candidate) {
                    this.rtcSocket.send(JSON.stringify({
                        type: 'ice-candidate',
                        roomId: this.activeRoomId.toString(),
                        data: event.candidate,
                        candidate: event.candidate
                    }));
                }
            };
        },

// ‚≠ê Signaling Î©îÏãúÏßÄ Ï≤òÎ¶¨ (ÏÉàÎ°úÏö¥ Ìï®Ïàò Ï∂îÍ∞Ä)
        handleSignalingMessage: function(message) {
            console.log('üì® Signaling Î©îÏãúÏßÄ:', message.type);

            switch (message.type) {
                case 'offer': {
                    const offer = message.offer || message.data;
                    if (!offer) {
                        console.warn('‚ö†Ô∏è ÏàòÏã†Ìïú Offer Ï†ïÎ≥¥Í∞Ä ÏóÜÏäµÎãàÎã§.', message);
                        return;
                    }
                    this.rtcConnection.setRemoteDescription(new RTCSessionDescription(offer))
                            .then(() => this.rtcConnection.createAnswer())
                            .then(answer => this.rtcConnection.setLocalDescription(answer))
                            .then(() => {
                                this.rtcSocket.send(JSON.stringify({
                                    type: 'answer',
                                    roomId: this.activeRoomId.toString(),
                                    data: this.rtcConnection.localDescription,
                                    answer: this.rtcConnection.localDescription
                                }));
                            })
                            .catch(error => console.error('‚ùå Offer Ï≤òÎ¶¨ Ïã§Ìå®:', error));
                    break;
                }

                case 'answer': {
                    const answer = message.answer || message.data;
                    if (!answer) {
                        console.warn('‚ö†Ô∏è ÏàòÏã†Ìïú Answer Ï†ïÎ≥¥Í∞Ä ÏóÜÏäµÎãàÎã§.', message);
                        return;
                    }
                    this.rtcConnection.setRemoteDescription(new RTCSessionDescription(answer))
                            .catch(error => console.error('‚ùå Answer Ï≤òÎ¶¨ Ïã§Ìå®:', error));
                    break;
                }

                case 'ice-candidate': {
                    const candidate = message.candidate || message.data;
                    if (!candidate) {
                        console.warn('‚ö†Ô∏è ÏàòÏã†Ìïú ICE ÌõÑÎ≥¥Í∞Ä ÏóÜÏäµÎãàÎã§.', message);
                        return;
                    }
                    this.rtcConnection.addIceCandidate(new RTCIceCandidate(candidate))
                            .catch(error => console.error('‚ùå ICE ÌõÑÎ≥¥ Ï≤òÎ¶¨ Ïã§Ìå®:', error));
                    break;
                }

                case 'user-joined':
                    // AdminÏù¥ Ï∞∏Í∞ÄÌïòÎ©¥ Offer ÏÉùÏÑ±
                    this.rtcConnection.createOffer()
                            .then(offer => this.rtcConnection.setLocalDescription(offer))
                            .then(() => {
                                this.rtcSocket.send(JSON.stringify({
                                    type: 'offer',
                                    roomId: this.activeRoomId.toString(),
                                    data: this.rtcConnection.localDescription,
                                    offer: this.rtcConnection.localDescription
                                }));
                            })
                            .catch(error => console.error('‚ùå Offer ÏÉùÏÑ± Ïã§Ìå®:', error));
                    break;
            }
        },

// ‚≠ê ÏòÅÏÉÅ ÌÜµÌôî Ï¢ÖÎ£å (ÏÉàÎ°úÏö¥ Ìï®Ïàò Ï∂îÍ∞Ä)
        endVideoCall: function() {
            console.log('üì¥ ÏòÅÏÉÅÌÜµÌôî Ï¢ÖÎ£å');

            // Î°úÏª¨ Ïä§Ìä∏Î¶º Ï†ïÏßÄ
            if (this.localStream) {
                this.localStream.getTracks().forEach(track => track.stop());
                this.localStream = null;
            }

            // RTCPeerConnection Îã´Í∏∞
            if (this.rtcConnection) {
                this.rtcConnection.close();
                this.rtcConnection = null;
            }

            // WebSocket Îã´Í∏∞
            if (this.rtcSocket) {
                this.rtcSocket.close();
                this.rtcSocket = null;
            }

            // UI Ï¥àÍ∏∞Ìôî
            document.getElementById('localVideo').srcObject = null;
            document.getElementById('remoteVideo').srcObject = null;
            $('#startCallBtn').show();
            $('#endCallBtn').hide();
            $('#videoConnectionStatus').removeClass('connected connecting').addClass('disconnected').text('Ïó∞Í≤∞ ÎåÄÍ∏∞ Ï§ë');
        }
    };

