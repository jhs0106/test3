<script>
    const adminChatDetail = {
        roomId: '${roomId}',
        custId: '${custId}',
        adminId: '${sessionScope.admin}',
        stompClient: null,
        isConnected: false,
        assignCompleted: false,
        map: null,
        customerMarker: null,

        init() {
            this.cacheElements();
            this.bindEvents();
            this.renderInitialInfo();

            // ‚≠ê Kakao Maps SDK Î°úÎî© ÌôïÏù∏ ÌõÑ ÏßÄÎèÑ Ï¥àÍ∏∞Ìôî
            this.waitForKakao(() => {
                this.initMap();
            });

            if (!this.adminId) {
                this.appendSystemMessage('Í¥ÄÎ¶¨Ïûê Î°úÍ∑∏Ïù∏Ïù¥ ÌïÑÏöîÌï©ÎãàÎã§.');
                this.disableInputs(true);
                return;
            }

            this.assignRoom();
            this.connectWebSocket();
        },

        // ‚≠ê Kakao SDK Î°úÎî© ÎåÄÍ∏∞ Ìï®Ïàò
        waitForKakao(callback) {
            if (typeof kakao !== 'undefined' && kakao.maps) {
                callback();
            } else {
                setTimeout(() => this.waitForKakao(callback), 100);
            }
        },

        initMap: function() {
            const container = document.getElementById('customer-map');
            if (!container) {
                console.error('‚ùå ÏßÄÎèÑ Ïª®ÌÖåÏù¥ÎÑàÎ•º Ï∞æÏùÑ Ïàò ÏóÜÏäµÎãàÎã§.');
                return;
            }

            const options = {
                center: new kakao.maps.LatLng(37.5665, 126.9780), // ÏÑúÏö∏ ÏãúÏ≤≠ Í∏∞Î≥∏Í∞í
                level: 3
            };

            this.map = new kakao.maps.Map(container, options);

            // Í≥†Í∞ù ÏúÑÏπò ÎßàÏª§
            this.customerMarker = new kakao.maps.Marker({
                map: this.map
            });

            console.log('‚úÖ Kakao Map Ï¥àÍ∏∞Ìôî ÏôÑÎ£å');
            this.loadCustomerLocation();
        },

        loadCustomerLocation: function() {
            $.ajax({
                url: 'https://192.168.45.176:8443/api/chatroom/' + this.roomId,
                type: 'GET',
                success: (room) => {
                    if (room.latitude && room.longitude) {
                        this.updateMapLocation(room.latitude, room.longitude);
                    } else {
                        console.log('‚ÑπÔ∏è Í≥†Í∞ù ÏúÑÏπò Ï†ïÎ≥¥ ÏóÜÏùå');
                    }
                },
                error: (xhr) => {
                    console.error('‚ùå Ï±ÑÌåÖÎ∞© Ï†ïÎ≥¥ Ï°∞Ìöå Ïã§Ìå®:', xhr.responseText);
                }
            });
        },

        updateMapLocation: function(lat, lng) {
            if (!this.map || !this.customerMarker) {
                console.warn('‚ö†Ô∏è ÏßÄÎèÑÍ∞Ä ÏïÑÏßÅ Ï¥àÍ∏∞ÌôîÎêòÏßÄ ÏïäÏïòÏäµÎãàÎã§.');
                return;
            }

            const position = new kakao.maps.LatLng(lat, lng);

            // ÏßÄÎèÑ Ï§ëÏã¨ Ïù¥Îèô
            this.map.setCenter(position);

            // ÎßàÏª§ ÏúÑÏπò ÏóÖÎç∞Ïù¥Ìä∏
            this.customerMarker.setPosition(position);

            // Ï¢åÌëú ÌëúÏãú
            $('#map-latitude').text(lat.toFixed(6));
            $('#map-longitude').text(lng.toFixed(6));

            console.log('üìç Í≥†Í∞ù ÏúÑÏπò ÏóÖÎç∞Ïù¥Ìä∏:', lat, lng);
        },

        cacheElements() {
            this.$log = $('#admin-message-log');
            this.$messageInput = $('#admin-chat-message');
            this.$sendBtn = $('#admin-send-btn');
            this.$closeBtn = $('#close-chat-btn');
            this.$connection = $('#admin-connection-status');
            this.$assignStatus = $('#assign-status');
        },

        bindEvents() {
            this.$sendBtn.click(() => this.sendMessage());
            this.$closeBtn.click(() => this.closeChat());
            this.$messageInput.on('keypress', (e) => {
                if (e.which === 13) {
                    e.preventDefault();
                    this.sendMessage();
                }
            });
        },

        renderInitialInfo() {
            $('#detail-room-id').text(this.roomId);
            $('#detail-cust-id').text(this.custId);
            $('#detail-admin-id').text(this.adminId || '-');
        },

        assignRoom() {
            const adminId = this.adminId;
            if (!adminId) {
                return;
            }
            $.ajax({
                url: 'https://192.168.45.176:8443/api/chatroom/' + this.roomId + '/assign',
                type: 'POST',
                data: { adminId },
                success: (response) => {
                    this.assignCompleted = true;
                    $('#detail-admin-id').text(adminId);
                    this.$assignStatus
                        .removeClass('badge-secondary badge-danger')
                        .addClass('badge-success')
                        .text('ÏÉÅÎã¥ ÏßÑÌñâ Ï§ë');
                    this.appendSystemMessage('Ï±ÑÌåÖÎ∞©Ïù¥ Î∞∞Ï†ïÎêòÏóàÏäµÎãàÎã§. Í≥†Í∞ùÍ≥ºÏùò ÏÉÅÎã¥ÏùÑ ÏãúÏûëÌïòÏÑ∏Ïöî.');
                    this.disableInputs(!(this.isConnected && this.assignCompleted));
                },
                error: (xhr) => {
                    let message = 'Ï±ÑÌåÖÎ∞© Î∞∞Ï†ïÏóê Ïã§Ìå®ÌñàÏäµÎãàÎã§.';
                    if (xhr.status === 409) {
                        message = 'Ïù¥ÎØ∏ Îã§Î•∏ Í¥ÄÎ¶¨ÏûêÍ∞Ä Î∞∞Ï†ïÎêú Ï±ÑÌåÖÎ∞©ÏûÖÎãàÎã§.';
                        this.fetchRoomInfo();
                    }
                    this.$assignStatus
                        .removeClass('badge-success badge-secondary')
                        .addClass('badge-danger')
                        .text('Î∞∞Ï†ï Ïã§Ìå®');
                    this.appendSystemMessage(message);
                    this.disableInputs(true);
                }
            });
        },

        fetchRoomInfo() {
            $.ajax({
                url: 'https://192.168.45.176:8443/api/chatroom/active/' + this.custId,
                type: 'GET',
                dataType: 'json',
                success: (data) => {
                    if (data && data.adminId) {
                        $('#detail-admin-id').text(data.adminId);
                        this.appendSystemMessage('ÌòÑÏû¨ ÏÉÅÎã¥ÏÇ¨Îäî ' + data.adminId + ' ÏûÖÎãàÎã§.');
                        if (data.adminId === this.adminId) {
                            this.assignCompleted = true;
                            this.$assignStatus
                                .removeClass('badge-secondary badge-danger')
                                .addClass('badge-success')
                                .text('ÏÉÅÎã¥ ÏßÑÌñâ Ï§ë');
                            this.disableInputs(!(this.isConnected && this.assignCompleted));
                        }
                    }
                }
            });
        },

        connectWebSocket() {
            if (!this.adminId) {
                return;
            }
            const socket = new SockJS('${wsurl}adminchat');
            this.stompClient = Stomp.over(socket);
            this.$connection.text('Ïó∞Í≤∞ Ï§ë...').removeClass('text-danger').addClass('text-warning');
            this.stompClient.connect({}, (frame) => {
                console.log('Admin connected:', frame);
                this.isConnected = true;
                this.$connection.text('Ïó∞Í≤∞ ÏôÑÎ£å').removeClass('text-warning text-danger').addClass('text-success');
                this.disableInputs(!(this.assignCompleted));
                this.appendSystemMessage('WebSocket Ïó∞Í≤∞Ïù¥ ÏôÑÎ£åÎêòÏóàÏäµÎãàÎã§.');

                this.stompClient.subscribe('/send/to/' + this.adminId, (msg) => {
                    try {
                        const payload = JSON.parse(msg.body);
                        this.appendMessage(payload.sendid || 'Í≥†Í∞ù', payload.content1, 'customer');
                    } catch (error) {
                        console.error('Î©îÏãúÏßÄ ÌååÏã± Ïò§Î•ò', error);
                    }
                });
            }, () => {
                this.isConnected = false;
                this.$connection.text('Ïó∞Í≤∞ Ïã§Ìå®').removeClass('text-warning text-success').addClass('text-danger');
                this.disableInputs(true);
                this.stompClient = null;
            });

            socket.onclose = () => {
                this.isConnected = false;
                this.$connection.text('Ïó∞Í≤∞ Ï¢ÖÎ£å').removeClass('text-success text-warning').addClass('text-danger');
                this.disableInputs(true);
                this.stompClient = null;
                this.appendSystemMessage('WebSocket Ïó∞Í≤∞Ïù¥ Ï¢ÖÎ£åÎêòÏóàÏäµÎãàÎã§. ÏÉàÎ°úÍ≥†Ïπ® ÌõÑ Îã§Ïãú ÏãúÎèÑÌï¥Ï£ºÏÑ∏Ïöî.');
            };
        },

        disableInputs(disabled) {
            this.$messageInput.prop('disabled', disabled);
            this.$sendBtn.prop('disabled', disabled);
            this.$closeBtn.prop('disabled', disabled);
        },

        closeChat() {
            if (!confirm('ÏÉÅÎã¥ÏùÑ Ï¢ÖÎ£åÌïòÏãúÍ≤†ÏäµÎãàÍπå?\nÏ¢ÖÎ£å ÌõÑÏóêÎäî Îã§Ïãú ÏãúÏûëÌï† Ïàò ÏóÜÏäµÎãàÎã§.')) {
                return;
            }

            $.ajax({
                url: 'https://192.168.45.176:8443/api/chatroom/' + this.roomId + '/close',
                type: 'POST',
                success: (response) => {
                    this.appendSystemMessage('‚úÖ ÏÉÅÎã¥Ïù¥ Ï¢ÖÎ£åÎêòÏóàÏäµÎãàÎã§.');
                    this.$assignStatus
                        .removeClass('badge-success badge-secondary badge-danger')
                        .addClass('badge-dark')
                        .text('Ï¢ÖÎ£åÎê®');
                    this.disableInputs(true);

                    // WebSocketÏúºÎ°ú Ï¢ÖÎ£å ÏïåÎ¶º Ï†ÑÏÜ°
                    if (this.stompClient && this.isConnected) {
                        const closePayload = {
                            sendid: this.adminId,
                            receiveid: this.custId,
                            content1: '__CHAT_CLOSED__',
                            type: 'SYSTEM_CLOSE'
                        };
                        this.stompClient.send('/adminreceiveto', {}, JSON.stringify(closePayload));
                    }

                    // 3Ï¥à ÌõÑ Ï±ÑÌåÖÎ∞© Î¶¨Ïä§Ìä∏Î°ú Ïù¥Îèô
                    setTimeout(() => {
                        window.location.href = '/chatroom';
                    }, 3000);
                },
                error: (xhr) => {
                    alert('Ï±ÑÌåÖÎ∞© Ï¢ÖÎ£åÏóê Ïã§Ìå®ÌñàÏäµÎãàÎã§: ' + xhr.responseText);
                }
            });
        },

        sendMessage() {
            if (!this.stompClient || !this.isConnected || !this.assignCompleted) {
                alert('WebSocket Ïó∞Í≤∞ ÎòêÎäî Ï±ÑÌåÖÎ∞© Î∞∞Ï†ïÏù¥ ÏôÑÎ£åÎêòÏßÄ ÏïäÏïòÏäµÎãàÎã§.');
                return;
            }
            const content = this.$messageInput.val().trim();
            if (!content) {
                return;
            }
            const payload = {
                sendid: this.adminId,
                receiveid: this.custId,
                content1: content
            };
            this.stompClient.send('/adminreceiveto', {}, JSON.stringify(payload));
            this.appendMessage('ÎÇò', content, 'admin');
            this.$messageInput.val('');
            this.$messageInput.focus();
        },

        appendMessage(sender, message, type) {
            const sanitized = $('<div>').text(message).html();
            const time = new Date().toLocaleTimeString('ko-KR', { hour12: false });
            const entry = [
                '<div class="message-entry">',
                '<div class="sender ' + (type || 'admin') + '">[' + time + '] ' + sender + '</div>',
                '<div class="body">' + sanitized + '</div>',
                '</div>'
            ].join('');
            this.$log.append(entry);
            this.$log.scrollTop(this.$log[0].scrollHeight);
        },

        appendSystemMessage(message) {
            const time = new Date().toLocaleTimeString('ko-KR', { hour12: false });
            this.$log.append(
                '<div class="message-entry">' +
                '<div class="sender">[' + time + '] ÏãúÏä§ÌÖú</div>' +
                '<div class="body">' + $('<div>').text(message).html() + '</div>' +
                '</div>'
            );
            this.$log.scrollTop(this.$log[0].scrollHeight);
        }
    };

    $(function() {
        adminChatDetail.init();
    });
</script>

